# Application
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3001

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=MoneyCircle@1233
DB_DATABASE=moneycircle
DB_SYNCHRONIZE=true
DB_LOGGING=true
DB_MAX_QUERY_TIME=1000
DB_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=5000
DB_IDLE_TIMEOUT=30000
DB_MAX_CONNECTIONS=20
DB_CACHE_DURATION=30000

# Optional Production DB SSL (uncomment in production)
# DB_SSL_CA=./ssl/ca.pem
# DB_SSL_KEY=./ssl/client-key.pem
# DB_SSL_CERT=./ssl/client-cert.pem

# Database Replication (uncomment in production)
# DB_MASTER_HOST=master-db.example.com
# DB_MASTER_PORT=5432
# DB_REPLICA_HOSTS=replica1.example.com,replica2.example.com
# DB_REPLICA_PORT=5432

# Migrations
DB_MIGRATIONS_RUN=true

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100